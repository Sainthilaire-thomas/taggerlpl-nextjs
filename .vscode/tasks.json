{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Dump AlgorithmLab Tree",
      "type": "process",
      "command": "cmd",
      "args": [
        "/c",
        "tree",
        "/F",
        "/A",
        "src\\app\\(protected)\\analysis\\components\\AlgorithmLab",
        ">",
        "algorithmlab_tree.txt",
        "&&",
        "code",
        "algorithmlab_tree.txt"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "Generate Full Project Tree",
      "type": "process",
      "command": "cmd",
      "args": [
        "/c",
        "if not exist \"docs\" mkdir \"docs\" && tree /F /A > \"docs\\project_tree.txt\" 2>nul & echo Project tree generated in docs\\project_tree.txt & exit /b 0"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Generate Src Tree Only",
      "type": "process",
      "command": "cmd",
      "args": [
        "/c",
        "if not exist \"docs\" mkdir \"docs\" && tree /F /A \".\\src\" > \"docs\\src_tree.txt\" 2>nul & echo Source tree generated in docs\\src_tree.txt & exit /b 0"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Generate Calls DDD Tree",
      "type": "process",
      "command": "cmd",
      "args": [
        "/c",
        "if not exist \"docs\" mkdir \"docs\" && tree /F /A \".\\src\\components\\calls\" > \"docs\\calls_ddd_tree.txt\" 2>nul & echo Calls DDD architecture tree generated in docs\\calls_ddd_tree.txt & exit /b 0"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Generate All Trees",
      "dependsOn": [
        "Generate Full Project Tree",
        "Generate Src Tree Only",
        "Generate Calls DDD Tree"
      ],
      "dependsOrder": "sequence",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "AlgorithmLab: Update Types Doc",
      "type": "process",
      "command": "node",
      "args": [
        "scripts/gen-types-doc.mjs",
        "--root=src/app/(protected)/analysis/components/AlgorithmLab/types",
        "--out=src/app/(protected)/analysis/components/AlgorithmLab/types/referencetypes.md"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "AlgorithmLab: Update Types Doc (FULL)",
      "type": "process",
      "command": "node",
      "args": [
        "scripts/gen-types-doc.mjs",
        "--root=src/app/(protected)/analysis/components/AlgorithmLab/types",
        "--out=src/app/(protected)/analysis/components/AlgorithmLab/types/referencetypes.md",
        "--full"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
