{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Generate Project Tree",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/scripts/generate-tree-simple.ps1"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Generate Full Structure Report",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/scripts/generate-structure-report.ps1"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "Dump AlgorithmLab Tree",
      "type": "process",
      "command": "cmd",
      "args": [
        "/c",
        "tree",
        "/F",
        "/A",
        "src\\app\\(protected)\\analysis\\components\\AlgorithmLab",
        ">",
        "algorithmlab_tree.txt",
        "&&",
        "code",
        "algorithmlab_tree.txt"
      ],
      "options": { "cwd": "${workspaceFolder}" },
      "problemMatcher": []
    },
    {
      "label": "AlgorithmLab: Update Types Doc",
      "type": "process",
      "command": "node",
      "args": [
        "scripts/gen-types-doc.mjs",
        "--root=src/app/(protected)/analysis/components/AlgorithmLab/types",
        "--out=src/app/(protected)/analysis/components/AlgorithmLab/types/referencetypes.md"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    },
    {
      "label": "AlgorithmLab: Update Types Doc (FULL)",
      "type": "process",
      "command": "node",
      "args": [
        "scripts/gen-types-doc.mjs",
        "--root=src/app/(protected)/analysis/components/AlgorithmLab/types",
        "--out=src/app/(protected)/analysis/components/AlgorithmLab/types/referencetypes.md",
        "--full"
      ],
      "problemMatcher": [],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "clear": true
      }
    }
  ]
}
